<%= form_for(@feedlist) do |f| %>
  <% if @feedlist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feedlist.errors.count, "error") %> prohibited this feedlist from being saved:</h2>

      <ul>
      <% @feedlist.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :placeholder => "Max's Feeds" %>
    <br>
    <label for="feed_text">paste subscription.xml here</label>
    <br>
    <input type="file" name="feed" id="file_picker">
    <textarea name="feedlist[feed_text]" id="feed_text" style="display: none"></textarea>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>