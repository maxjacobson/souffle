<p>Your <%= @total %> feeds:</p>
<ul>
  <% @folders.each do |folder| %>
    <li class="folder"><%= folder[:title] %> (<%= folder[:feeds].length %>)
      <ul>
        <% folder[:feeds].each do |feed| %>
          <li class="feed"><a href="<%= feed[:siteurl] %>"><%= feed[:title] %></a> <a href="<%= feed[:feedurl] %>" class="rsslink">RSS</a></li>
        <% end %>
      </ul>
    </li>
  <% end %>
  <% @strayfeeds.each do |strayfeed| %>
      <li class="feed"><a href="<%= strayfeed[:siteurl] %>"><%= strayfeed[:title] %></a> <a href="<%= strayfeed[:feedurl] %>" class="rsslink">RSS</a></li>
  <% end %>
</ul>